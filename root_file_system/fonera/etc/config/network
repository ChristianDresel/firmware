config 'interface' 'loopback'
        option 'ifname' 'lo'
        option 'proto' 'static'
        option 'ipaddr' '127.0.0.1'
        option 'netmask' '255.0.0.0'

config 'interface' 'lan'
        option 'proto' 'dhcp'
        option 'ifname' 'eth0'

config 'interface' 'mesh'
        option 'type' 'bridge'
        option 'ifname' 'ath0 bat0 tap0'
	option 'stp'	'1'
