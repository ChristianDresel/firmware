config 'wifi-device' 'wifi0'
	option 'type' 'mac80211'
	option 'phy' 'phy0'
	option 'disabled' '0'
	option 'channel' '1'
    option 'hwmode' '11g'

config 'wifi-iface'
	option 'device' 'wifi0'
	option 'network' 'wlanmesh'
	option 'mode' 'adhoc'
	option 'ssid' 'batman.franken.freifunk.net'
	option 'bssid' '02:CA:FF:EE:BA:BE'
	option 'encryption' 'none'
	option 'hidden' '1'

config 'wifi-iface'
	option 'device' 'wifi0'
	option 'network' 'mesh'
	option 'mode' 'ap'
	option 'ssid' 'franken.freifunk.net'
	option 'encryption' 'none'

