# this is for the WAN/VPN on the Ethernet Port
config 'interface' 'unused'
        option 'ifname' 'eth0'
        option 'proto' 'static'
config 'interface' 'mesh'
        option 'type' 'bridge'
        option 'ifname' 'bat0 tap0'
	    option 'auto' '1'
